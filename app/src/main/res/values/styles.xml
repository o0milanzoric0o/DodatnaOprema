<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/appbar.first.tab</item>
        <item name="colorPrimaryDark">@color/appbar.first.tab</item>
        <item name="colorAccent">@color/tablayout.accent.color</item>
        <item name="drawerArrowStyle">@style/DrawerArrowStyle</item>
    </style>
    <style name="SecondFragment" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@android:color/holo_red_dark</item>
        <item name="colorPrimaryDark">@android:color/holo_red_dark</item>
        <item name="colorAccent">@android:color/holo_red_light</item>
        <item name="drawerArrowStyle">@style/DrawerArrowStyle</item>
    </style>

    <style name="DrawerArrowStyle" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="color">@android:color/white</item>
    </style>

    <style name="CustomTabTextStyle" parent="TextAppearance.Design.Tab">
        <!-- Customize Tab Text Style. -->
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#8AFFFFFF</item>
        <item name="textAllCaps">false</item>
    </style>

    <style name="CustomNavigationDrawerLayout" parent="Widget.Design.NavigationView">
        <!-- Customize List Item theme. -->
        <item name="android:itemTextAppearance">@style/NavigatonListItemTextStyle</item>
        <item name="tabTextAppearance">@style/CustomTabTextStyle</item>
    </style>
    <style name="NavigatonListItemTextStyle" parent="TextAppearance.Design.Tab">
        <!-- Customize Tab Text Style. -->
        <item name="android:textSize">@dimen/list_item_text_size</item>
        <item name="android:textColor">@color/listItemColor</item>
        <item name="textAllCaps">false</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Dark" />

    <style name="SplashTheme" parent="Theme.AppCompat.NoActionBar">

    </style>

</resources>
