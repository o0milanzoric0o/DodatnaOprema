<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_selected="true">
        <shape android:shape="rectangle">
            <corners android:radius="0dp" />
            <solid android:color="@color/selected_button" />
            <padding android:bottom="0dp" android:left="5dp" android:right="5dp" android:top="0dp" />
            <stroke android:width="0.5dp" android:color="#00878787" />
        </shape>
    </item>

    <item>
        <shape android:shape="rectangle">
            <corners android:radius="0dp" />
            <solid android:color="@color/button_holder_background" />
            <padding android:bottom="0dp" android:left="5dp" android:right="5dp" android:top="0dp" />
            <stroke android:width="0.5dp" android:color="#00878787" />
        </shape>
    </item>
</selector>