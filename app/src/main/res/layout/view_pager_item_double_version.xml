<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_top_title"
        android:layout_centerInParent="true"
        android:layout_marginLeft="0dip"
        android:layout_marginRight="0dip"
        android:fitsSystemWindows="true"
        android:gravity="center"
        android:orientation="horizontal"
        android:weightSum="2">

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <com.android.volley.toolbox.NetworkImageView
                android:id="@+id/img_pager_item_1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:adjustViewBounds="true"
                android:clickable="false"
                android:padding="0dp"
                android:scaleType="fitCenter" />

            <TextView
                android:id="@+id/tv_price_title_item_1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/img_pager_item_1"
                android:layout_centerHorizontal="true"
                android:background="@color/white_transparent"
                android:gravity="center"
                android:padding="10dp"
                android:text="13000 DIN"
                android:textColor="@android:color/black"
                android:textSize="12sp" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <com.android.volley.toolbox.NetworkImageView
                android:id="@+id/img_pager_item_2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:adjustViewBounds="true"
                android:clickable="false"
                android:padding="0dp"
                android:scaleType="fitCenter" />

            <TextView
                android:id="@+id/tv_price_title_item_2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/img_pager_item_2"
                android:layout_centerHorizontal="true"
                android:background="@color/white_transparent"
                android:gravity="center"
                android:padding="10dp"
                android:text="13000 DIN"
                android:textColor="@android:color/black"
                android:textSize="12sp" />
        </RelativeLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/tv_top_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="@color/white_transparent"
        android:gravity="center"
        android:padding="10dp"
        android:text="Preporuka nedelje"
        android:textColor="@android:color/black"
        android:textSize="18sp" />
</RelativeLayout>